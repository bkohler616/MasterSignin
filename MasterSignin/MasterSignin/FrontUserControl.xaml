<UserControl x:Class="MasterSignin.FrontUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MasterSignin"
             mc:Ignorable="d" 
             HorizontalContentAlignment="Stretch"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Margin="60,60,60,60" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="40,40,40,40" Content="Sign In" FontSize="35" Click="SignIn_OnClick"/>
        <Button Grid.Row="1" Margin="40,40,40,40" Content="Sign Out" FontSize="35" Click="SignOut_OnClick"/>
        <Button Grid.Row="2" Margin="40,40,40,40" Content="System Management" FontSize="35" Click="SystemManagement_OnClick"/>
    </Grid>
</UserControl> 
