<UserControl x:Class="MasterSignin.SystemManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MasterSignin"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Margin="60,60,60,60" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.ColumnSpan="2" Margin="40,40,40,40" Content="Add Student" FontSize="35" Click="AddStudent_OnClick"/>
        <Button Grid.Row="1" Grid.ColumnSpan="2" Margin="40,40,40,40" Content="Database Manager" FontSize="35" Click="DatabaseManager_OnClick"/>
        <Button Grid.Row="2" Grid.Column ="0" Margin="40,40,40,40" Content="Back" FontSize="35" Click="Back_OnClick"/>
        <Button Grid.Row="2" Grid.Column="1" Margin="40,40,40,40" Content="Exit" FontSize="35" Click="Exit_OnClick" />
    </Grid>
</UserControl>
